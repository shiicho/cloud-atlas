# {{ ansible_managed }}
# Environment Configuration

[environment]
name = {{ environment }}

{% if environment == 'production' %}
# Production Settings
log_level = WARNING
max_connections = 1000
cache_enabled = true
{% elif environment == 'staging' %}
# Staging Settings
log_level = INFO
max_connections = 100
cache_enabled = true
{% else %}
# Development Settings
log_level = DEBUG
max_connections = 10
cache_enabled = false
{% endif %}

[debug]
enabled = {{ debug_enabled | lower }}

[features]
{% for feature, enabled in features.items() %}
{{ feature }} = {{ 'on' if enabled else 'off' }}
{% endfor %}
